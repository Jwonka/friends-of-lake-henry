---
import BaseLayout from "../layouts/BaseLayout.astro";
---
<BaseLayout title="Donate | Friends of Lake Henry">
    <div class="container">
        <section class="card pad enter-block">
            <h1>Donate</h1>
            <p class="lead">
                Your donation supports lake restoration efforts, community outreach, and fundraising operations.
            </p>

            <div class="panel enter-block delay-1">
                <h2>Donation options</h2>
                <ul>
                    <li>One-time donation</li>
                    <li>Monthly support (optional)</li>
                    <li>Sponsorship opportunities (optional)</li>
                </ul>
                <div class="ctaRow">
                    <a class="btn" href="#" aria-disabled="true">Donate (placeholder)</a>
                </div>
                <p class="muted small">
                    Weâ€™ll link this button to your chosen donation processor (Square, Stripe, PayPal, etc.) once confirmed.
                </p>
            </div>
        </section>
    </div>

    <style>
        .pad { margin-top: var(--section-gap); }
        .lead { max-width: 75ch; margin: 0 0 1.25rem; }
        ul { margin: 0; padding-left: 1.1rem; color: var(--text-bright); }
        .ctaRow { display:flex; gap: 0.75rem; flex-wrap: wrap; margin-top: 1rem; }
        .small { font-size: 0.95rem; }
        /* Mobile: full-width primary action */
        @media (max-width: 520px){
            .ctaRow{ flex-direction: column; align-items: stretch; }
            .ctaRow .btn{ width: 100%; justify-content: center; }
        }
    </style>
</BaseLayout>
