---
import BaseLayout from "../layouts/BaseLayout.astro";
---
<BaseLayout title="About / Mission | Friends of Lake Henry">
    <div class="container">
        <section class="card pad">
            <h1>About / Mission</h1>
            <p class="lead">
                Friends of Lake Henry is a community nonprofit dedicated to supporting long-term restoration of Lake Henry through fundraising, education, and local involvement.
            </p>

            <div class="grid">
                <div class="cardInner">
                    <h2>What we do</h2>
                    <ul>
                        <li>Raise funds for lake restoration efforts</li>
                        <li>Host community events and outreach</li>
                        <li>Share updates on projects and progress</li>
                    </ul>
                </div>
                <div class="cardInner">
                    <h2>How you can help</h2>
                    <ul>
                        <li>Donate to support restoration work</li>
                        <li>Buy raffle tickets during fundraisers</li>
                        <li>Volunteer at events</li>
                    </ul>
                </div>
            </div>
        </section>
    </div>

    <style>
        .pad { padding: 2rem; margin-top: 1.25rem; }
        h1 { margin: 0 0 0.75rem; font-size: 2rem; }
        .lead { color: var(--muted); max-width: 70ch; margin: 0 0 1.5rem; }
        .grid { display: grid; grid-template-columns: 1fr; gap: 1rem; }
        .cardInner { background: rgba(255,255,255,0.02); border: 1px solid var(--border); border-radius: 14px; padding: 1.25rem; }
        h2 { margin: 0 0 0.5rem; font-size: 1.1rem; }
        ul { margin: 0; padding-left: 1.1rem; color: var(--muted); }
        @media (min-width: 860px) { .grid { grid-template-columns: 1fr 1fr; } }
    </style>
</BaseLayout>

