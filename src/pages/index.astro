---
import BaseLayout from "../layouts/BaseLayout.astro";
export const prerender = false;

const title = "Home | Friends of Lake Henry";
const description = "Friends of Lake Henry is a community nonprofit supporting lake restoration, fundraising efforts, and local events around Lake Henry.";
---

<BaseLayout  title={title} description={description}>
	<div class="container">
		<section class="hero card enter-block">
			<div>
				<h1>Protecting and restoring Lake Henry—together.</h1>
				<p>
					Friends of Lake Henry is a community nonprofit raising funds and organizing
					support for long-term lake restoration.
				</p>
			</div>
		</section>

		<section class="card pad enter-block delay-1">
			<h2>Our Mission</h2>
			<p class="lead">
				Friends of Lake Henry is a community nonprofit dedicated to supporting long-term restoration of Lake Henry
				through fundraising, education, and local involvement.
			</p>

			<div class="grid">
				<div class="panel enter-block delay-2">
					<h3>Our mission</h3>
					<p>
						Protect and restore Lake Henry by funding meaningful projects and building community support around the lake.
					</p>
				</div>

				<div class="panel enter-block delay-2">
					<h3>What we do</h3>
					<ul>
						<li>Raise funds for lake restoration efforts</li>
						<li>Share updates and information with the community</li>
						<li>Organize events and fundraising opportunities</li>
					</ul>
				</div>

				<div class="panel enter-block delay-3">
					<h3>How you can help</h3>
					<ul>
						<li>Donate to support restoration work</li>
						<li>Buy raffle tickets during fundraisers</li>
						<li>Volunteer or help spread the word</li>
					</ul>
				</div>

				<div class="panel enter-block delay-3">
					<h3>Transparency</h3>
					<p>
						We aim to be clear about where funds go and what they support. As details are finalized, we’ll post updates
						here and on our Facebook page.
					</p>
				</div>
			</div>
		</section>
	</div>

	<style>
		.hero { margin-top: var(--section-gap); }
		.pad {margin-top: var(--section-gap); }
		.hero p {
			margin: 0;
			max-width: 65ch;
			line-height: 1.6;
			color: var(--text-strong);
		}
		.panel{
          background: rgba(0, 0, 0, 0.36);
          border: 1px solid rgba(255,255,255,0.2);
          backdrop-filter: blur(6px);
        }
		.panel p { margin: 0.5rem 0 0; }
		.grid { display: grid; grid-template-columns: 1fr; gap: 1rem; }
		.lead { margin: 0 0 1.5rem; max-width: 80ch; }
		ul { margin: 0; padding-left: 1.1rem; }
		@media (min-width: 860px){
			.grid { grid-template-columns: 1fr 1fr; }
		}
	</style>
</BaseLayout>
