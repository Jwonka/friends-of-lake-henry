---
import BaseLayout from "../layouts/BaseLayout.astro";
import "../styles/global.css";
---

<BaseLayout title="Friends of Lake Henry">
	<div class="container">
		<section class="hero card">
			<div class="pad">
				<h1>Protecting and restoring Lake Henry—together.</h1>
				<p>
					Friends of Lake Henry is a community nonprofit raising funds and organizing
					support for long-term lake restoration.
				</p>
				<div class="actions">
					<a class="btn primary" href="/donate">Donate</a>
					<a class="btn primary" href="/events">View events</a>
				</div>
			</div>
		</section>

		<section class="contactSection card">
			<div class="pad">
				<h2>Contact</h2>
				<p>
					Have a question, want to volunteer, or need raffle information? Send us a
					message and we’ll get back to you.
				</p>

				<form class="form" method="post" action="/api/contact">
					<div class="row">
						<label>
							Name
							<input name="name" autocomplete="name" required />
						</label>
						<label>
							Email
							<input name="email" type="email" autocomplete="email" required />
						</label>
					</div>

					<label>
						Message
						<textarea name="message" rows="6" required></textarea>
					</label>

					<button class="btn primary" type="submit">Send message</button>

					<p class="fine muted">
						By submitting, you agree we may contact you back about your request.
					</p>
				</form>
			</div>
		</section>
	</div>

	<style>
		.hero{ margin-top: 1.25rem; }
		.contactSection{ margin-top: 1.5rem; margin-bottom: 2.5rem; }

		.pad { padding: 2rem; }
		h1 { margin: 0 0 0.75rem; font-size: 2rem; }
		.hero p,
		.contactSection p {
			margin: 0 0 1.25rem;
			max-width: 65ch;
			line-height: 1.6;
			color: var(--text-strong);
		}

		p.fine { margin-top: 0.75rem; }
		p.fine.muted { color: var(--text-soft); }

		.actions { display:flex; gap: 0.75rem; flex-wrap: wrap; }

		h2 { margin: 0 0 0.75rem; font-size: 1.4rem; }
		.muted { color: var(--muted); }
		.fine { font-size: 0.95rem; margin-top: 0.75rem; }

		.form { margin-top: 1rem; display: grid; gap: 1rem; }
		.row { display: grid; gap: 1rem; grid-template-columns: 1fr; }
		label { display: grid; gap: 0.4rem; color: var(--text); font-weight: 700; }

		input, textarea{
			padding: 0.75rem 0.85rem;
			border-radius: 12px;
			border: 1px solid rgba(255,255,255,0.10);
			background: rgba(0,0,0,0.12);
			color: var(--text);
		}
		textarea { resize: vertical; }

		@media (min-width: 860px){
			.row { grid-template-columns: 1fr 1fr; }
		}
	</style>
</BaseLayout>
