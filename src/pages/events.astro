---
import BaseLayout from "../layouts/BaseLayout.astro";
import { events } from "../data/events";
export const prerender = false;
---
<BaseLayout title="Events | Friends of Lake Henry">
    <div class="container">
        <section class="card pad enter-block">
            <h1>Events</h1>
            <p class="lead">Upcoming events and community opportunities to support Lake Henry.</p>

            <div class="list">
                {events.map((e, idx) => (
                        <article class={`panel item enter-block ${idx === 0 ? "delay-1" : idx === 1 ? "delay-2" : "delay-3"}`}>
                            <div class="meta">
                                <div class="title">{e.title}</div>
                                <div class="sub">{e.date} â€¢ {e.location}</div>
                            </div>
                            <p class="summary">{e.summary}</p>
                        </article>
                ))}
            </div>
        </section>
    </div>

    <style>
        .pad { margin-top: var(--section-gap); }
        .lead { margin: 0 0 1.25rem; max-width: 70ch; }
        .list { display: grid; gap: var(--section-gap); }
        .item { padding: 1.25rem; }
        .title { font-weight: 900; color: var(--text); font-size: 1.15rem; }
        .sub { color: var(--text); font-size: 0.95rem; margin-top: 0.35rem; }
        .summary { margin: 0.75rem 0 0; color: var(--text-soft); max-width: 80ch; }
        /* Small screens */
        @media (max-width: 520px){
            .item{ padding: 1rem; }
            .title{ font-size: 1.05rem; }
            .sub{ font-size: .9rem; }
            .summary{ margin-top: .6rem; }
        }

        /* Larger screens: a little more breathing room */
        @media (min-width: 860px){
            .list{ gap: var(--section-gap); }
        }
    </style>
</BaseLayout>
