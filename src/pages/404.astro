---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Page not found | Friends of Lake Henry">
    <div class="container">
        <section class="card pad enter-block">
            <h1>Page not found</h1>
            <p class="lead">
                Sorry—there’s nothing at this address. Use one of the links below to get back on track.
            </p>

            <div class="actions enter-block delay-1">
                <a class="btn enter-block delay-2" href="/">Go to Home</a>
                <a class="btn enter-block delay-3" href="/donors">Donors</a>
                <a class="btn enter-block delay-4" href="/events">Upcoming events</a>
                <a class="btn enter-block delay-5" href="/donate">Donate</a>
            </div>

            <p class="muted small">
                If you followed a broken link, let us know on the <a class="error"  href="/contact">Contact</a> page.
            </p>
        </section>
    </div>

    <style>
        .pad { padding: 2rem; margin-top: var(--section-gap); }
        h1 { margin: 0 0 0.75rem; font-size: 2rem; }
        .lead { max-width: 75ch; margin: 0 0 1.25rem; }
        .actions { display:flex; gap: 0.75rem; flex-wrap: wrap; }
        .muted { color: var(--text-soft); margin: 1.25rem 0 0; }
        .small { font-size: 0.95rem; }
        .error {
            color: rgba(11,18,32,0.85);
            font-weight: bold;
            font-size: var(--text-large);
        }
        .error:hover {
            color: #2f302b;;
        }
    </style>
</BaseLayout>
