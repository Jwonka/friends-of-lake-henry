---
import BaseLayout from "../layouts/BaseLayout.astro";
export const prerender = false;
const title = "Page Not Found | Friends of Lake Henry";
const description =
    "The page you are looking for could not be found. Please return to the Friends of Lake Henry homepage."
---

<BaseLayout title={title} description={description}>
    <div class="container">
        <section class="card enter-block">
            <h1>Page not found</h1>
            <p class="lead">
                Sorry—there’s nothing at this address. Use one of the links below to get back on track.
            </p>

            <div class="actions enter-block delay-1">
                <a class="btn enter-block delay-2" href="/">Go to Home</a>
                <a class="btn enter-block delay-3" href="/donors">Donors</a>
                <a class="btn enter-block delay-4" href="/events">Upcoming events</a>
                <a class="btn enter-block delay-5" href="/photos">Photos</a>
            </div>

            <p class="muted small">
                If you followed a broken link, let us know on the <a class="error"  href="/contact">Contact</a> page.
            </p>
        </section>
    </div>

    <style>
        .lead { max-width: 75ch; margin: 0 0 1.25rem; }
        .actions { display:flex; gap: 0.75rem; flex-wrap: wrap; }
        .small { font-size: 0.95rem; }
        .error {
            color: var(--surface-veil);
            font-weight: bold;
            font-size: var(--text-large);
        }
        .error:hover {
            color: #2f302b;;
        }
        @media (max-width: 520px){
            .actions{ flex-direction: column; align-items: stretch; }
            .actions .btn{ width: 100%; justify-content: center; }
        }
    </style>
</BaseLayout>
