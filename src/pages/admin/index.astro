---
import BaseLayout from "../../layouts/BaseLayout.astro";
export const prerender = false;
---

<BaseLayout title="Admin | Friends of Lake Henry">
    <div class="container" style="--maxw: 1100px;">
        <section class="card adminCard enter-block">
            <div class="adminHeader">
                <div class="pageTop">
                    <div class="pageTopRow">
                        <a class="pill enter-block delay-1" href="/admin">ADMIN</a>

                        <form class="logoutForm enter-block delay-1" method="post" action="/api/admin/logout">
                            <button class="btn" type="submit">Log out</button>
                        </form>
                    </div>

                    <h1 class="h1-tight">Admin Dashboard</h1>
                    <p class="lead adminLead">Manage site content and donor listings.</p>
                </div>
            </div>

            <div class="panel adminPanel enter-block delay-2">
                <div class="adminGrid enter-block delay-3">
                    <a class="adminTile" href="/admin/donors">
                        <strong>Donors</strong>
                        <div class="muted">Add and manage donors.</div>
                    </a>

                    <a class="adminTile" href="/admin/raffle">
                        <strong>Raffle</strong>
                        <div class="muted">Update raffle messaging, dates, and winners.</div>
                    </a>

                    <a class="adminTile" href="/admin/events">
                        <strong>Events</strong>
                        <div class="muted">Add, edit, publish, and remove events.</div>
                    </a>

                    <a class="adminTile" href="/admin/photos/pending">
                        <strong>Photos: Pending</strong>
                        <div class="muted">Review submissions and publish to the gallery.</div>
                    </a>

                    <a class="adminTile" href="/admin/photos/approved">
                        <strong>Photos: Approved</strong>
                        <div class="muted">View published photos and delete if needed.</div>
                    </a>

                </div>
            </div>
        </section>
    </div>

    <style>
        :global(.pageBg){
            --page-overlay: rgba(0,0,0,0.30);
        }

        .adminCard{ margin-top: var(--section-gap); }
        .adminPanel{ margin-top: 1rem; }
        .adminLead{ margin: 0; }
        .adminHeader{ display: block; }

        .pageTop{
            display: grid;
            gap: .6rem;
            width: 100%;
        }

        .pageTopRow{
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: .75rem;
            width: 100%;
        }

        /* Button sizing on small screens */
        .logoutForm{ margin: 0; }
        .logoutForm .btn{
            padding: .6rem .9rem;
            border-radius: 999px;
            white-space: nowrap;
        }

        .adminGrid{
            display:grid;
            grid-template-columns: repeat(2, minmax(0, 1fr));
            gap: .75rem;
        }

        .adminTile{
            display:block;
            padding: 1rem;
            border-radius: 16px;
            border: 1px solid var(--border);
            background: var(--glass-dark);
            backdrop-filter: blur(6px);
            color: var(--text);
            text-decoration: none;
            transition: transform 140ms ease, border-color 160ms ease, background-color 160ms ease;
        }

        .adminTile:hover,
        .adminTile:focus-visible{
            transform: translateY(-2px);
            border-color: var(--border-bright);
            background: var(--glass-dark-strong);
            outline: none;
        }
        /* Tablet */
        @media (max-width: 900px){
            .adminGrid{ grid-template-columns: 1fr; }
        }

        /* Phones: make tiles feel tappable */
        @media (max-width: 680px){
            .adminTile{ padding: 1.1rem; }
            .adminHeader{
                padding-right: 0;
            }
            .adminActions{
                position: static;
                margin-left: auto;
            }
        }
    </style>
</BaseLayout>
