---
import BaseLayout from "../../layouts/BaseLayout.astro";
---

<BaseLayout title="Admin | Friends of Lake Henry">
    <div class="container" style="--maxw: 1100px;">
        <section class="card adminCard enter-block">
            <div class="adminHeader">
                <div>
                    <a class="pill enter-block delay-1" href="/admin">ADMIN</a>
                    <h1 class="h1-tight">Admin Dashboard</h1>
                    <p class="lead adminLead">Manage site content and donor listings.</p>
                </div>

                <form class="logoutForm enter-block delay-1" method="post" action="/api/admin/logout">
                    <button class="pill" type="submit">Log out</button>
                </form>
            </div>

            <div class="panel adminPanel enter-block delay-2">
                <div class="adminGrid enter-block delay-3">
                    <a class="adminTile" href="/admin/donors">
                        <strong>Donors</strong>
                        <div class="muted">Add and manage donors shown on the Donors page.</div>
                    </a>
                    <a class="adminTile" href="/admin/photos/pending">
                        <strong>Photos</strong>
                        <div class="muted">Review submissions and publish to the gallery.</div>
                    </a>

                    <a class="adminTile" href="/admin/raffle">
                        <strong>Raffle</strong>
                        <div class="muted">Update raffle messaging, dates, and winners.</div>
                    </a>
                </div>
            </div>
        </section>
    </div>

    <style>
        .adminCard{ margin-top: var(--section-gap); }
        .adminPanel{ margin-top: 1rem; }
        .adminLead{ margin: 0; }
        .adminHeader{
            display:flex;
            align-items:flex-end;
            justify-content:space-between;
            gap: 1rem;
            flex-wrap: wrap;
        }
        .adminGrid{
            display:grid;
            grid-template-columns: repeat(2, minmax(0, 1fr));
            gap: .75rem;
        }
        .adminTile{
            display:block;
            padding: 1rem;
            border-radius: 16px;
            border: 1px solid var(--border);
            background: var(--glass-dark);
            backdrop-filter: blur(6px);
            color: var(--text);
            text-decoration: none;
            transition: transform 140ms ease, border-color 160ms ease, background-color 160ms ease;
        }
        .adminTile:hover,
        .adminTile:focus-visible{
            transform: translateY(-2px);
            border-color: var(--border-bright);
            background: var(--glass-dark-strong);
            outline: none;
        }
        .logoutForm{ margin: 0; }
        .logoutForm .pill{ border: 1px solid var(--border); }
        /* Tablet */
        @media (max-width: 900px){
            .adminGrid{ grid-template-columns: 1fr; }
        }

        /* Phones: make tiles feel tappable */
        @media (max-width: 680px){
            .adminTile{ padding: 1.1rem; }
        }
    </style>
</BaseLayout>
