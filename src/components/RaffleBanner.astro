---
const raffleUrl = "/raffle";
const message = "Raffle tickets available â€” support Lake Henry restoration.";
const cta = "Click here";
---

<a href={raffleUrl} class="bar" aria-label="View raffle details">
    <div class="container inner">
        <span class="msg">{message}</span>
        <span class="cta">{cta}</span>
    </div>
</a>

<style>
    .bar{
        display: block;
        background: linear-gradient(90deg, var(--brand-dark), var(--brand));
        text-decoration: none;
    }

    .inner{
        display:flex;
        align-items:center;
        justify-content:center;
        gap: 0.75rem;
        padding: 0.7rem 0;
        text-align: center;
    }

    .msg,
    .cta{
        color: white;
        font-weight: 600;
        font-size: 1.4rem;
        transition: color 0.15s ease;
        text-decoration: none;
    }

    .cta{
        font-weight: 800;
        white-space: nowrap;
    }

    .bar:hover .msg,
    .bar:hover .cta{
        color: rgba(11, 18, 32, 0.95);
    }
</style>
