---
const raffleUrl = "/raffle";
const ctaText = "Raffle winners and live drawings on Facebook.";
const cta = "View details";
const isActive = true;
---
{isActive && (
    <a href={raffleUrl} class="bar" aria-label="View raffle details">
        <div class="container inner">
            <span class="msg">{ctaText}</span>
            <span class="cta">{cta}</span>
        </div>
    </a>
)}
<style>
    .bar{
        position: relative;
        display: block;
        background: var(--banner-bg);
        text-decoration: none;
        z-index: 150;
    }

    .bar::after {
        content: "";
        position: absolute;
        inset: 0;
        background: linear-gradient(
                120deg,
                transparent,
                var(--shine-light),
                transparent
        );
        opacity: 0;
        transition: opacity 200ms ease;
    }

    .bar:hover::after {
        opacity: 1;
    }

    .inner{
        display:flex;
        align-items:center;
        justify-content:center;
        gap: 0.75rem;
        padding: 0.7rem 0;
        text-align: center;
    }

    .msg,
    .cta{
        color: white;
        font-weight: 600;
        font-size: 1.4rem;
        transition: color 0.15s ease;
        text-decoration: none;
    }

    .cta{
        font-weight: 800;
        white-space: nowrap;
    }

    @media (max-width: 760px){
        .inner{
            flex-direction: column;
            gap: .35rem;
            padding: .65rem 0;
        }

        .msg, .cta{
            font-size: 1rem;
            line-height: 1.2;
        }

        .cta{
            white-space: normal;
            font-weight: 800;
        }
    }
</style>
