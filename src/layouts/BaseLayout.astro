---
import "../styles/global.css";
import SiteHeader from "../components/SiteHeader.astro";
import RaffleBanner from "../components/RaffleBanner.astro";

const {
    title = "Friends of Lake Henry",
    description = "Friends of Lake Henry is a community nonprofit supporting lake restoration, fundraising, and local engagement.",
    image = "/og/lakeHenryShareImg_1200x630.jpeg"
} = Astro.props;

const canonical = Astro.site
    ? new URL(Astro.url.pathname, Astro.site).toString()
    : undefined;

const ogImageUrl = Astro.site ? new URL(image, Astro.site).toString() : image;
const jsonLdOrg = Astro.site ? {
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": "Friends of Lake Henry",
    "url": new URL("/", Astro.site).toString(),
    "description": description,
    "logo": new URL("/icons/friendsOfLakeHenryLogo_206x206.jpg", Astro.site).toString(),
    "sameAs": [
        "https://www.facebook.com/people/Friends-of-Lake-Henry/61552199315213/"
    ]
} : null;
---

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image:alt" content="Lake Henry dredging project sign and shoreline restoration work." />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:type" content="image/jpeg" />
    <meta property="og:site_name" content="Friends of Lake Henry" />
    {canonical && <link rel="canonical" href={canonical} />}
    {canonical && <meta property="og:url" content={canonical} />}

    {jsonLdOrg && (<script type="application/ld+json" set:html={JSON.stringify(jsonLdOrg)} />)}

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />
    <!-- Keep favicon as-is (tab icon) -->
    <link rel="icon" href="/icons/friendsOfLakeHenryLogo_206x206.jpg" type="image/jpeg" sizes="206x206" />
    <link rel="apple-touch-icon" href="/icons/friendsOfLakeHenryLogoAppleIcon_180x180.png" type="image/png" sizes="180x180" />
</head>
<body>
<SiteHeader />
<RaffleBanner />

<main class="siteMain">
    <div class="pageBg pageEnterBg" aria-hidden="true"></div>
    <div class="pageContent">
        <slot />
    </div>
</main>

<footer class="footer">
    <div class="container">
        <div class="footInner">
            <div class="footCenter">
                <div class="footTop">
                    <div class="footBrandLine">
                        <strong class="footBrand">Friends of Lake Henry</strong>
                        <span class="footCopy">© {new Date().getFullYear()}</span>
                    </div>
                    <div class="footTag muted">A community nonprofit supporting lake restoration.</div>
                </div>

                <nav class="footLegal" aria-label="Legal">
                    <a class="footLegalLink" href="/privacy">Privacy Policy</a>
                    <span class="footDot" aria-hidden="true">·</span>
                    <a class="footLegalLink" href="/terms">Terms of Use</a>
                </nav>

                <div class="adminFoot">
                    <a href="/admin/login" class="adminLink">Admin</a>
                </div>
            </div>
        </div>
    </div>
</footer>
</body>
</html>
<style>
    html, body {
        height: 100%;
    }

    body {
        overscroll-behavior-y: none;
    }

    /* Prevent sideways scroll when content starts offscreen */
    .siteMain {
        position: relative;
        min-height: calc(100svh - 160px);
        padding: 2rem 0 3rem;
        overflow-x: hidden;
        z-index: 0;
    }

    /* This is the “page-wide” image background (main only) */
    .pageBg{
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100svh;
        background-image: url("/theme/hero.jpg");
        background-size: cover;
        background-position: center;
        z-index: 0;
        pointer-events: none;
        /* compositor hints that often reduce visible jitter */
        transform: translateZ(0);
        will-change: transform;
    }

    /* Darken the image for readability (main only) */
    .pageBg::after{
        content: "";
        position: absolute;
        inset: 0;
        background: var(--page-overlay);
    }

    .pageContent{
        position: relative;
        padding-top: 0.75rem;
        z-index: 1;
    }

    .footer{
        border-top: 1px solid var(--border);
        padding: 2rem 0;
        background: var(--surface-veil);
        backdrop-filter: blur(10px);
    }

    .footInner{
        display: grid;
        grid-template-columns: 1fr;
        align-items: center;
        gap: 1rem;
    }

    .footCenter{
        text-align: center;
    }

    .footTop{
        display: flex;
        align-items: baseline;
        justify-content: center;
        gap: .6rem;
        flex-wrap: wrap;
    }

    .footBrandLine{
        display: inline-flex;
        align-items: baseline;
        gap: .5rem;
        white-space: nowrap;
    }

    .footBrand{ color: var(--text); }
    .footCopy{ color: var(--text-soft); font-size: .95rem; }
    .footTag{ margin: 0; color: var(--text-soft); }
    .muted{ color: var(--muted); }

    .footLegal{
        margin-top: .5rem;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: .5rem;
        flex-wrap: wrap;
    }

    .footLegalLink{
        font-size: .9rem;
        font-weight: 600;
        color: var(--text-soft);
        text-decoration: none;
        opacity: .85;
        transition: opacity 160ms ease, color 160ms ease;
    }

    .footLegalLink:hover,
    .footLegalLink:focus-visible{
        opacity: 1;
        color: var(--text);
    }

    .footDot{
        opacity: .45;
        color: var(--text-soft);
    }

    .adminFoot{
        margin-top: .35rem;
        text-align: center;
    }

    .adminLink{
        font-size: .85rem;
        font-weight: 600;
        letter-spacing: .2px;
        opacity: .45;
        color: var(--text-soft);
        text-decoration: none;
        transition: color 160ms ease, opacity 160ms ease;
    }

    .adminLink:hover,
    .adminLink:focus-visible{
        opacity: 0.85;
        color: var(--text);
    }

    @supports not (height: 100svh) {
        .siteMain {
            min-height: calc(100vh - 160px);
        }
        .pageBg {
            height: 100vh;
        }
    }

    @media (max-width: 900px){
        .pageBg{ position: fixed; }
    }

    @media (min-width: 681px){
        .footTop{
            flex-wrap: nowrap;
        }
    }

    @media (max-width: 680px){
        .footInner{
            grid-template-columns: 1fr;
            justify-items: center;
            text-align: center;
        }
        .adminLink{ width: 100%; justify-content: center; }
    }
</style>
