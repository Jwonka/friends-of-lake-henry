---
import "../styles/global.css";
import SiteHeader from "../components/SiteHeader.astro";
import RaffleBanner from "../components/RaffleBanner.astro";

const {
    title = "Friends of Lake Henry",
    description = "Friends of Lake Henry is a community nonprofit supporting lake restoration, fundraising, and local engagement.",
    image = "/images/lakeHenry.jpg"
} = Astro.props;

const canonical = Astro.site
    ? new URL(Astro.url.pathname, Astro.site).toString()
    : undefined;
---

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    {canonical && <meta property="og:url" content={canonical} />}

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />
</head>
<body>
<SiteHeader />
<RaffleBanner />

<main class="siteMain">
    <div class="pageBg pageEnterBg" aria-hidden="true"></div>
    <div class="pageContent">
        <slot />
    </div>
</main>

<footer class="footer">
    <div class="container">
        <div class="footInner">
            <div class="footLeft" aria-hidden="true"></div>

            <div class="footCenter">
                <div class="footBrandLine">
                    <strong class="footBrand">Friends of Lake Henry</strong>
                    <span class="footCopy">© {new Date().getFullYear()}</span>
                </div>
                <div class="muted footTag">A community nonprofit supporting lake restoration.</div>
            </div>

            <div class="footRight">
                <a href="/admin" class="pill adminLink">Admin</a>
            </div>
        </div>
    </div>
</footer>
<script>
    const setVh = () => {
        document.documentElement.style.setProperty('--vh', `${window.innerHeight * 0.01}px`);
    };
    setVh();

    if (window.visualViewport) {
        window.visualViewport.addEventListener('resize', setVh);
    } else {
        window.addEventListener('resize', setVh);
    }
    window.addEventListener('orientationchange', setVh);
</script>
</body>
</html>

<style>
    /* Prevent sideways scroll when content starts offscreen */
    .siteMain {
        position: relative;
        min-height: calc(100svh - 160px);
        padding: 2rem 0 3rem;
        overflow-x: hidden;
        z-index: 0;
    }

    /* This is the “page-wide” image background (main only) */
    .pageBg{
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100svh;
        background-image: url("/images/hero.jpg");
        background-size: cover;
        background-position: center;
        z-index: 0;
        pointer-events: none;
        /* compositor hints that often reduce visible jitter */
        transform: translateZ(0);
        will-change: transform;
    }

    /* Darken the image for readability (main only) */
    .pageBg::after{
        content: "";
        position: absolute;
        inset: 0;
        background: var(--page-overlay);
    }

    .pageContent{
        position: relative;
        padding-top: 0.75rem;
        z-index: 1;
    }

    .footer{
        border-top: 1px solid var(--border);
        padding: 2rem 0;
        background: var(--surface-veil);
        backdrop-filter: blur(10px);
    }

    .footInner{
        display: grid;
        grid-template-columns: 1fr auto 1fr;
        align-items: center;
        gap: 1rem;
    }

    .footCenter{
        text-align: center;
    }

    .footBrandLine{
        display: inline-flex;
        align-items: baseline;
        gap: .5rem;
    }

    .footBrand{ color: var(--text); }
    .footCopy{ color: var(--text-soft); font-size: .95rem; }

    .footTag{ margin-top: .25rem; }

    .footRight{
        display: flex;
        justify-content: flex-end;
    }

    .muted{ color: var(--muted); }
    .adminFoot{
        margin-top: .35rem;
    }

    .adminLink{
        font-size: .85rem;
        opacity: .01;
        color: var(--text-soft);
        text-decoration: none;
    }

    .adminLink:hover,
    .adminLink:focus-visible{
        opacity: .1;
        color: var(--text);
    }

    @supports not (height: 100svh) {
        .siteMain {
            min-height: calc((var(--vh) * 100) - 160px);
        }
    }

    @media (max-width: 900px){
        .pageBg{ position: fixed; }
    }
    @media (max-width: 680px){
        .footInner{
            grid-template-columns: 1fr;
            justify-items: center;
            text-align: center;
        }
        .footRight{ justify-content: center; width: 100%; }
        .adminLink{ width: 100%; justify-content: center; }
    }
</style>
